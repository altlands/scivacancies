@using System.Threading.Tasks
@using SciVacancies.Domain.Enums
@using SciVacancies.WebApp
@using SciVacancies.WebApp.Controllers
@model SciVacancies.WebApp.ViewModels.VacanciesInOrganizationIndexViewModel

<div class="crumbs">
    <a href="/">Главная страница</a><span class="separator">/</span>
    <a asp-controller="organizations" asp-action="account">Карточка организации</a><span class="separator">/</span>
    @ViewBag.Title
</div>

<h3>Карточка организации</h3>

@Component.Invoke("AccountTabs", typeof(OrganizationsController))

<h4>@ViewBag.Title</h4>

<div class="table-control">
    <a href="#" class="close-table"><span class="italic">Очистить фильтры</span></a>
    <a href="#" class="reload-table"><span class="italic">Обновить список</span></a>
</div>

<table class="table request-table">
    <thead>
        <tr>
            <th><div class="inline-block"><img src="/images/icons/arrow-bottom-tab.png" class="va-middle" /></div><div class="inline-block ml6 va-middle">№</div></th>
            <th><div class="inline-block"><img src="/images/icons/tab-head.png" class="va-middle" /></div><div class="inline-block ml6 va-middle">ID конкурса</div></th>
            <th><div class="pl21 va-middle">Вакансия</div></th>
            <th><div class="inline-block"><img src="/images/icons/tab-head.png" class="va-middle" /></div><div class="inline-block ml6 va-middle">Дата<br /> создания</div></th>
            <th><div class="inline-block"><img src="/images/icons/tab-head.png" class="va-middle" /></div><div class="inline-block ml6 va-middle">Дата<br />публикации</div></th>
            <th><div class="inline-block"><img src="/images/icons/tab-head.png" class="va-middle" /></div><div class="inline-block ml6 va-middle">Статус<br />вакансии</div></th>
            <th><div class="pl21 va-middle">Действия</div></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.PagedPositions != null)
        {
            foreach (var item in Model.PagedPositions.Items.Where(c => c.Status == PositionStatus.InProcess))
            {
                <text>

                <tr>
                    <td>@item.Guid.ToString().Substring(0, 4)...</td>
                    <td>ГНС600001</td>
                    <td>@item.Name</td>
                    <!--TODO: проверить правильность информации-->
                    <td>@item.CreationDate.ToShortDateString() <!--01-09-14, 16:04--></td>
                    <td></td>
                    <td><span class="status  @item.Status.GetHtmlClass()">@item.Status.GetDescription() <!--Объявлен--></span></td>
                    <td>
                        <a asp-controller="positions" asp-action="details" asp-route-id="@item.Guid" class="view-td-icon" title="Просмотр вакансии"></a>
                        <a asp-controller="positions" asp-action="edit" asp-route-id="@item.Guid" class="edit-td-icon" title="Изменить вакансию"></a>
                        <a asp-controller="positions" asp-action="delete" asp-route-id="@item.Guid" onclick="javascript: return confirm('Вы уверены что хотите удалить эту вакансию?');" class="close-td-icon" title="Удалить вакансию"></a>
                        @if (item.Status == PositionStatus.InProcess)
                        {
                            <a asp-controller="positions" asp-action="publish" asp-route-id="@item.Guid" class="class-td-icon" title="Опубликовать"></a>
                        }
                    </td>
                </tr>
                </text>
            }
        }

        @if (Model.PagedVacancies != null)
        {
            foreach (var item in Model.PagedVacancies.Items.Where(c => c.Status == VacancyStatus.Published || c.Status == VacancyStatus.AppliesAcceptance || c.Status == VacancyStatus.InCommittee))
            {
                <text>
                <tr>
                    <td>@item.Guid.ToString().Substring(0, 4)...</td>
                    <td>ГНС600001</td>
                    <td>@item.Name</td>
                    <!--TODO: проверить правильность информации-->
                    <td>@item.CreationDate.ToShortDateString() <!--01-09-14, 16:04--></td>
                    <td>@{item.DateStart.ToShortDateString(); } <!--01-09-14, 16:04--></td>
                    <td><span class="status @item.Status.GetHtmlClass()">@item.Status.GetDescription()</span></td>
                    <td>
                        <a asp-controller="vacancies" asp-action="details" asp-route-id="@item.Guid" class="view-td-icon" title="Просмотр вакансии"></a>
                        @if (item.Status == VacancyStatus.Published || item.Status == VacancyStatus.AppliesAcceptance)
                        {
                            <a asp-controller="vacancies" asp-action="cancel" asp-route-id="@item.Guid" onclick="javascript: return confirm('Вы уверены что хотите отменить эту вакансию?');" class="close-td-icon" title="Отменить вакансию"></a>
                        }
                        @if (item.Status == VacancyStatus.InCommittee)
                        {
                            <a asp-controller="vacancies" asp-action="cancel" asp-route-id="@item.Guid" title="Выбрать победителя">Выбрать победителя</a>
                        }
                    </td>
                </tr>
                </text>
            }
        }
    </tbody>
</table>
<div class="bottom-nav">
    <div class="bottom-nav-left">
        <div class="count-news">
            1-4 из 4 записей
        </div>
        <div class="count-line-page">
            <input type="text" value="10"> записей на странице
        </div>
    </div>
    <div class="bottom-nav-right">
        <ul>
            <li>
                <span class="first disable">
                    <span>Первая</span>
                </span>
            </li>
            <li>
                <span class="prev disable">
                    <span>Предыдущая</span>
                </span>
            </li>
            <li>
                <div class="count-page">
                    <input type="text" value="1"> из 306
                </div>
            </li>
            <li>
                <span class="next disable">
                    <span>Следующая</span>
                </span>
            </li>
            <li>
                <span class="latest disable">
                    <span>Последняя</span>
                </span>
            </li>
        </ul>
    </div>
</div>

<div class="ctr-buttons mb5 mt-30">
    <a asp-controller="positions" asp-action="create">
        <span class="green-btn middle-icon">Добавить вакансию</span>
    </a>
</div>


<div class="b-bottom-nav">
    <a href="/" class="small-icon icon-prev">На главную страницу</a>
</div>
