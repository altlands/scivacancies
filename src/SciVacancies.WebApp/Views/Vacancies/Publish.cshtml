@using System.Threading.Tasks
@model SciVacancies.WebApp.ViewModels.VacancyPublishModel

<div class="crumbs">
    <a href="/">Главная</a><span class="separator">/</span>
    <a asp-controller="organizations" asp-action="account">Карточка организации</a><span class="separator">/</span>
    <a asp-controller="organizations" asp-action="vacancies">Вакансии</a><span class="separator">/</span>
    <a asp-controller="vacancies" asp-action="details" asp-route-id="@Model.Guid">@(Model.Details?.Name)</a><span class="separator">/</span>
    @ViewBag.Title
</div>

<h3>Опубликовать вакансию</h3>

<form class="l-application b-app-rows" method="POST" id="publishForm">
    <input type="hidden" asp-anti-forgery="true" />

    <div class="row">
        <div class="table-form">

            <div class="table-row form-row">
                <div class="left-cell">
                    <label>Укажите дату окончания приема заявок. </label>
                </div>
                <div class="right-cell">
                    <input asp-for="InCommitteeDateString" class="small-input datepicker-vacancy" />
                    <span asp-validation-for="InCommitteeDateString"></span>
                </div>
            </div>

        </div>
    </div>

    <div class="row pt15">
        <div class="ctr-buttons button-align">
            <span class="green-btn middle-icon icon-ok default-link">Опубликовать<input type="submit" class="bt-default" value="" /></span>
        </div>
    </div>

</form>


<div class="title-popup">
    <h4>Описание Вакансии:</h4>
</div>

@Component.Invoke("VacancyInfo", Model.Details)

<div class="b-bottom-nav">
    <a href="/" class="small-icon icon-prev">Главная</a>
    <a asp-controller="organizations" asp-action="account" class="small-icon icon-prev">Карточка организации</a>
    <a asp-controller="organizations" asp-action="vacancies" class="small-icon icon-prev">Вакансии</a>
    <a asp-controller="vacancies" asp-action="details" asp-route-id="@Model.Guid" class="small-icon icon-prev">@(Model.Details?.Name)</a>
</div>