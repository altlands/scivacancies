@using System.Threading.Tasks
@using SciVacancies.WebApp.ViewModels
@model VacancyCreateViewModel

<div class="crumbs">
    <a href="/">Главная страница</a><span class="separator">/</span>
    <a asp-controller="organizations" asp-action="account">Московский государственный университет им. М.В. Ломоносова</a><span class="separator">/</span>
    <a asp-controller="organizations" asp-action="vacancies">Вакансии</a><span class="separator">/</span>
    @ViewBag.Title
</div>

<h3>@ViewBag.Title</h3>

<form class="l-application">
<input type="hidden" name="ToPublish"/>
<div class="row">
    <div class="bold row-title">Специализация:</div>
    <div class="table-form">
        <div class="table-row form-row">
            <div class="left-cell">
                <label>Должность:</label>
            </div>
            <div class="right-cell">
                <div class="inline-block w290 sorting">
                    <select asp-for="PositionTypeGuid"
                            asp-items="Model.PositionTypes"></select>
                </div>
            </div>
        </div>

        <div class="table-row form-row">
            <div class="left-cell">
                <label>Полное наименование:</label>
            </div>
            <div class="right-cell">
                <textarea></textarea>
            </div>
        </div>

        <div class="table-row mt35">
            <div class="left-cell">
                <label>Отрасль науки:</label>
            </div>
            <div class="right-cell">
                <a href="#" class="link-add lk-icon italic">Добавить из Государственного рубрикатора научно-технической информации</a>
            </div>
        </div>

        <div class="table-row form-row">
            <div class="left-cell">
                <label>Тематика исследований:</label>
            </div>
            <div class="right-cell">
                <textarea></textarea>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="bold row-title">Задачи и критерии:</div>
    <div class="table-form">
        <div class="table-row form-row">
            <div class="left-cell">
                <label>Задачи:</label>
            </div>
            <div class="right-cell">
                <textarea></textarea>
            </div>
        </div>

        <div class="table-row form-row">
            <div class="left-cell">
                <label>Критерии оценки:</label>
            </div>
            <div class="right-cell">
                <ul class="content-list">
                    <li>
                        Добавленные критерии
                        <div class="buttons">
                            <span class="big-link-edit"></span><span class="big-link-remove"></span>
                        </div>
                    </li>
                </ul>
                <a href="#" class="link-add lk-icon italic">Добавить критерий</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="bold row-title">Условия:</div>
    <div class="table-form">
        <div class="table-row form-row">
            <div class="left-cell">
                <label>Зарплата в месяц:</label>
            </div>
            <div class="right-cell interval">
                <span class="italic fs14">от</span>
                <input type="text" value="" class="small-input"/>
                <span class="italic fs14">до</span>
                <input type="text" value="" class="small-input"/>
                <div class="inline-block w60 sorting va-top">
                    <select name="6" id="6">
                    <option value="руб.">руб.</option>
                    <option value="usd.">usd.</option>
                    <option value="eur.">eur.</option>
                    <select>
                </div>
            </div>
        </div>

        <div class="table-row form-row">
            <div class="left-cell">
                <label>Стимулирующие выплаты:</label>
            </div>
            <div class="right-cell">
                <input type="text" value="" class="big-input"/>
            </div>
        </div>

        <div class="table-row form-row">
            <div class="left-cell">
                <label>Дополнительно:</label>
            </div>
            <div class="right-cell">
                <textarea></textarea>
            </div>
        </div>

        <div class="table-row form-row">
            <div class="left-cell">
                <label>Трудовой договор:</label>
            </div>
            <div class="right-cell">
                <div class="inline-block w290 sorting">
                    <select name="4" id="4">
                        <option value="Бессрочный">Бессрочный</option>
                        <option value="Бессрочный1">Бессрочный1</option>
                        <option value="Бессрочный2">Бессрочный2</option>
                        <option value="Бессрочный3">Бессрочный3</option>
                        <option value="Бессрочный4">Бессрочный4</option>
                    </select>
                </div>

                <ul class="list-checkboxes">
                    <li>
                        <span class="checkbox checked">
                                <input type="checkbox" checked id="chk1" />
                            </span><label for="chk1">Социальный пакет</label>
                    </li>
                    <li>
                        <span class="checkbox checked">
                                <input type="checkbox" checked id="chk2" />
                            </span><label for="chk2">Найм жилья</label>
                    </li>
                    <li>
                        <span class="checkbox">
                                <input type="checkbox" id="chk3" />
                            </span><label for="chk3">Служебное жильё</label>
                    </li>
                    <li>
                        <span class="checkbox">
                                <input type="checkbox" id="chk4" />
                            </span><label for="chk4">Компенсация проезда</label>
                    </li>
                </ul>
            </div>
        </div>

        <div class="table-row form-row">
            <div class="left-cell">
                <label>Дополнительно:</label>
            </div>
            <div class="right-cell">
                <textarea></textarea>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="bold row-title">Лицо для получения дополнительных справок:</div>
    <div class="table-form">
        <div class="table-row form-row">
            <div class="left-cell">
                <label>Фамилия, имя, отчество:</label>
            </div>
            <div class="right-cell">
                <input type="text" value="" class="big-input"/>
            </div>
        </div>

        <div class="table-row form-row">
            <div class="left-cell">
                <label>E-mail:</label>
            </div>
            <div class="right-cell">
                <input type="text" value="" class="big-input"/>
            </div>
        </div>

        <div class="table-row form-row">
            <div class="left-cell">
                <label>Телефон:</label>
            </div>
            <div class="right-cell">
                <input type="text" value="" class="big-input"/>
            </div>
        </div>

        <div class="table-row form-row">
            <div class="left-cell">
                <label>Дополнительно:</label>
            </div>
            <div class="right-cell">
                <textarea></textarea>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="ctr-buttons button-align">
        <input type="submit" class="green-btn middle-icon icon-ok" onclick="javascript: vacancySaveOptions({ publish: true });" value="Сохранить и опубликовать"/>
        <input type="submit" class="blue-btn middle-icon icon-ok" onclick="javascript: vacancySaveOptions({ saveDraft: true });"value="Сохранить как черновик"/>
        <a asp-controller="organizations" asp-action="vacancies">
            <span class="blue-btn middle-icon icon-close">Закрыть</span>
        </a>
    </div>
</div>
</form>



<div class="b-bottom-nav">
    <a asp-controller="organizations" asp-action="vacancies" class="small-icon icon-prev">К карточке организации</a>
</div>