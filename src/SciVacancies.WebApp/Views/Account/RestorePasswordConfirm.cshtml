@using System.Threading.Tasks
@using Microsoft.AspNet.Identity
@model IdentityResult

<div class="crumbs">
    <a href="/">Главная</a><span class="separator">/</span>
    @ViewBag.Title
</div>

<h3>Личная карточка пользователя</h3>

@if (Model.Succeeded)
{
    <text>
    <p class="text-success" style="padding: 15px; font-size: larger;">
        Пароль обновлён. Можете продолжить работу в <a asp-controller="researchers" asp-action="account">личном кабинете</a>.
    </p>
    </text>
}
else
{
    <text>
    <p class="text-danger" style="padding: 15px; font-size: larger;">
        При восстановлении пароля возникли ошибки
    </p>
    </text>
    if (Model.Errors != null && Model.Errors.Any())
    {
        <text>
        <p>
            <ul>
                @foreach (var item in Model.Errors)
                {
                    <text>
                    <li class="text-warning">
                        @item
                    </li>
                    </text>
                }
            </ul>
        </p>
        </text>
    }

    <text>
    <p class="text-success" style="padding: 15px; font-size: larger;">
        <a asp-controller="account" asp-action="forgotpassword">
            Повторить сброс пароля
        </a>
    </p>
    </text>
}
<div class="b-bottom-nav">
    <a href="/" class="small-icon icon-prev">Главная</a>
</div>
