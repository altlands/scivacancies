@model dynamic

<div class="crumbs">
    <a href="/">Главная страница</a><span class="separator">/</span>
    <a asp-controller="researchers" asp-action="account">Личная карточка</a><span class="separator">/</span>
    <a asp-controller="researchers" asp-action="favorities">Мои заявки</a><span class="separator">/</span>
    @ViewBag.Title
</div>


<h3>Новая заявка</h3>

<form>
    <div class="l-application">
        <div class="row">
            <div class="bold row-title">Вакансия:</div>
            <div class="table-form">
                <div class="table-row form-row">
                    <div class="left-cell">
                        <label>ID конкурса:</label>
                    </div>
                    <div class="right-cell">
                        <input type="text" value="МНС6000567" disabled class="disabled big-input" />
                    </div>
                </div>

                <div class="table-row form-row">
                    <div class="left-cell">
                        <label>Должность:</label>
                    </div>
                    <div class="right-cell">
                        <input type="text" value="Младший научный сотрудник отраслевой лаборатории ядерных исследований" disabled class="disabled big-input" />
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="bold row-title">Контактная информация:</div>
            <div class="table-form">
                <div class="table-row form-row">
                    <div class="left-cell">
                        <label>Фамилия, имя, отчество:</label>
                    </div>
                    <div class="right-cell">
                        <input type="text" value="Глаголев Виктор Александрович" disabled class="disabled big-input" />
                    </div>
                </div>

                <div class="table-row form-row">
                    <div class="left-cell">
                        <label>E-mail:</label>
                    </div>
                    <div class="right-cell">
                        <input type="text" value="vaglagolev@pisem.net" disabled class="disabled big-input" />
                    </div>
                </div>

                <div class="table-row form-row">
                    <div class="left-cell">
                        <label>Добавить E-mail:</label>
                    </div>
                    <div class="right-cell">
                        <input type="text" value="" class="big-input" />
                    </div>
                </div>

                <div class="table-row form-row">
                    <div class="left-cell">
                        <label>Телефон:</label>
                    </div>
                    <div class="right-cell">
                        <input type="text" value="8(495)123-4567" disabled class="disabled big-input" />
                    </div>
                </div>

                <div class="table-row form-row">
                    <div class="left-cell">
                        <label>Добавить телефон:</label>
                    </div>
                    <div class="right-cell">
                        <input type="text" value="" class="big-input" />
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="bold row-title">Образование:</div>
            <div class="table-form">
                <div class="table-row form-row">
                    <div class="left-cell">
                        <label>Город:</label>
                    </div>
                    <div class="right-cell">
                        <input type="text" value="Челябинск" disabled class="disabled big-input" />
                    </div>
                </div>

                <div class="table-row form-row">
                    <div class="left-cell">
                        <label>ВУЗ:</label>
                    </div>
                    <div class="right-cell">
                        <input type="text" value="ЧГАКИ" disabled class="disabled big-input" />
                    </div>
                </div>

                <div class="table-row form-row">
                    <div class="left-cell">
                        <label>Факультет:</label>
                    </div>
                    <div class="right-cell">
                        <input type="text" value="Информационных ресурсов и технологий" disabled class="disabled big-input" />
                    </div>
                </div>

                <div class="table-row form-row">
                    <div class="left-cell">
                        <label>Год окончания:</label>
                    </div>
                    <div class="right-cell">
                        <input type="text" value="2000" disabled class="disabled big-input" />
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="bold row-title">Опыт работы:</div>
            <div class="table-form">
                <div class="table-row form-row">
                    <div class="left-cell">
                        <label>Исследовательская деятельность:</label>
                    </div>
                    <div class="right-cell">
                        <textarea></textarea>
                    </div>
                </div>

                <div class="table-row form-row">
                    <div class="left-cell">
                        <label>Преподавательская деятельность:</label>
                    </div>
                    <div class="right-cell">
                        <textarea></textarea>
                    </div>
                </div>

                <div class="table-row form-row">
                    <div class="left-cell">
                        <label>Прочая деятельность:</label>
                    </div>
                    <div class="right-cell">
                        <textarea></textarea>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="bold row-title">
                Научная деятельность<br /> и достижения:
            </div>
            <div class="table-form">
                <div class="table-row form-row">
                    <div class="left-cell">
                        <label>Ученая степень:</label>
                    </div>
                    <div class="right-cell">
                        <input type="text" value="без степени" disabled class="disabled big-input" />
                    </div>
                </div>

                <div class="table-row form-row">
                    <div class="left-cell">
                        <label>Ученые звания:</label>
                    </div>
                    <div class="right-cell">
                        <input type="text" value="без звания" disabled class="disabled big-input" />
                    </div>
                </div>

                <div class="table-row form-row">
                    <div class="left-cell">
                        <label>Награды:</label>
                    </div>
                    <div class="right-cell">
                        <input type="text" value="" disabled class="disabled big-input" />
                    </div>
                </div>

                <div class="table-row form-row">
                    <div class="left-cell">
                        <label>Публикации:</label>
                    </div>
                    <div class="right-cell">
                        <ol class="content-list">
                            <li>
                                Научная публикация поколения 2.0: перспектива или реальность?
                                <div class="buttons">
                                    <span class="big-link-edit"></span><span class="big-link-remove"></span>
                                </div>
                            </li>
                            <li>
                                Электронно-библиотечная система: перевод понятия на «библиотечный» английский
                                <div class="buttons">
                                    <span class="big-link-edit"></span><span class="big-link-remove"></span>
                                </div>
                            </li>
                        </ol>
                        <a class="link-add lk-icon italic link-add-field" href="#">Добавить публикацию</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="table-form">
                <div class="table-row">
                    <div class="left-cell">
                        <label>Приложенные файлы:</label>
                    </div>
                    <div class="right-cell">
                        <ul class="content-list">
                            <li>
                                Rezume.doc
                                <div class="buttons">
                                    <span class="big-link-remove"></span>
                                </div>
                            </li>
                        </ul>
                        <a class="link-add lk-icon italic" href="#">Приложить файл</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="ctr-buttons button-align mt26 mb5">
                <input type="submit" class="green-btn middle-icon" value="Создать заявку" />
                <a asp-controller="researchers" asp-action="applications">
                    <span class="blue-btn middle-icon icon-close">
                        Закрыть
                    </span>
                </a>
            </div>
        </div>
    </div>

</form>

<div class="b-bottom-nav">
    <a asp-controller="researchers" asp-action="applications" class="small-icon icon-prev">Мои заявки</a>
</div>