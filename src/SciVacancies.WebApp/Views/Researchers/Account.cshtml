@using System.Threading.Tasks
@using SciVacancies.WebApp.Controllers
@using SciVacancies.WebApp.Engine
@model SciVacancies.WebApp.ViewModels.ResearcherDetailsViewModel

<div class="crumbs">
    <a href="/">Главная</a><span class="separator">/</span>@ViewBag.Title
</div>

<h3>Личная карточка пользователя</h3>

@Component.Invoke("AccountTabs", typeof(ResearchersController))

<h4>@ViewBag.Title</h4>

<div class="l-information">
    <div class="row row-profile">
        <div class="profile">
            <div class="inline-block">
                @Component.Invoke("AvatarImage", Model.ImageUrl)
                
                <div class="link-edit mt10"><a asp-controller="researchers" asp-action="editphoto">Изменить фото</a></div>
            </div>
            <div class="info inline-block">
                <h4>@Model.FullName</h4>
                <span>Год рождения: @Model.BirthDate.Year.ToString("0000")</span>
            </div>
        </div>
    </div>
    <div class="row pt15 fs12">
        <div class="profile-description profile-description-place">
            <div>
                Email:
                <span class="bold">
                    @Model.Email
                </span>
                <br />
            </div>
            <div>
                Телефон:
                <span class="bold">
                    @Model.Phone
                </span>
                <br />
            </div>
            <div>
                Телефон (доп.):
                <span class="bold">
                    @Model.ExtraPhone
                </span>
                <br />
            </div>
        </div>
    </div>
    <div class="row pt15 fs12">
        <div><span class="bold">Индивидуальный номер ученого:</span> @Model.ExtNumber<br /></div>
        <span class="bold">Научные интересы (Государственный рубрикатор научно-технической информации):</span><br />
        @if (Model.Publications != null)
        {
            foreach (var item in Model.Interests)
            {
                <text>
                <span>
                    @item.IntName (Engl: @item.IntNameEn);
                </span>
                </text>

            }
        }
    </div>
    <div class="row">
        <span class="bold">Образование</span>
        @if (Model.Educations != null)
        {
            foreach (var item in Model.Educations)
            {
                <br />
                <ul class="table-emulation">
                    <li>
                        <span class="w85 italic inline-block">Город</span> <span class="italic">@item.City</span>
                    </li>
                    <li>
                        <span class="w85 italic inline-block">ВУЗ</span> <span class="italic">@item.UniversityShortName</span>
                    </li>
                    <li>
                        <span class="w85 italic inline-block">Факультет</span> <span class="italic">@item.FacultyShortName</span>
                    </li>
                    <li>
                        <span class="w85 italic inline-block">Год окончания</span> <span class="italic">@(item.GraduationYear)</span>
                    </li>
                </ul>
            }
        }
    </div>
    <div class="row">
        <span class="bold">Ученая степень</span>
        <span class="italic">
            @Model.ScienceDegree
        </span>
    </div>
    <div class="row">
        <span class="bold">Ученые звания</span>
        @Model.ScienceRank
    </div>
    <div class="row">
        <span class="bold">Награды</span>
        <span class="italic">
            @if (Model.Rewards != null)
            {
                foreach (var item in Model.Rewards.OrderBy(c => c.year))
                {
                    <br />
                    <span>
                        (@item.year) @item.title @item.org
                    </span>
                }
            }
        </span>
    </div>
    <div class="row">
        <span class="bold">Членство в профессиональных сообществах</span><br />
        <span class="italic">
            @if (Model.Memberships != null)
            {
                foreach (var item in Model.Memberships)
                {
                    <br />
                    <span>
                        @item.org - @item.position с @item.year_from по @item.year_to
                    </span>
                }
            }
        </span>
    </div>
    
    <div class="row">
        <span class="bold">Конференции, симпозиумы, конгрессы</span>
        <span class="italic">
            @if (Model.Conferences != null)
            {
                foreach (var item in Model.Conferences)
                {
                    <br />
                    <span>
                        @item.conference - доклад "@item.title" (год @item.year, тип @item.categoryType)
                    </span>
                }
            }
        </span>
    </div>

    <div class="row">
        <span class="bold">Публикации</span>
        @if (Model.Publications != null)
        {
            foreach (var item in Model.Publications)
            {
                <br/>
                <span>
                    @item.Name (авторы: @item.Authors)
                </span>
            }
        }
    </div>

    <div class="row">
        <span class="bold">Научная деятельность</span>
        <span class="italic">
            @if (Model.ResearchActivity != null)
            {
                foreach (var item in Model.ResearchActivity)
                {
                    <br />
                    <span>
                        Организация "@item.organization", на должности "@item.position" (период с @item.yearFrom по @item.yearTo; род деятельности @item.title)
                    </span>
                }
            }
        </span>
    </div>

    <div class="row">
        <span class="bold">Преподавательская деятельность</span>
        <span class="italic">
            @if (Model.TeachingActivity != null)
            {
                foreach (var item in Model.TeachingActivity)
                {
                    <br />
                    <span>
                        Организация "@item.organization", на должности "@item.position" (период с @item.yearFrom по @item.yearTo; род деятельности @item.title)
                    </span>
                }
            }
        </span>
    </div>

<div class="row">
    <span class="bold">Прочая деятельность</span>
    <span class="italic">
            @if (Model.OtherActivity != null)
            {
                foreach (var item in Model.OtherActivity)
                {
                    <br />
                    <span>
                        Организация "@item.organization", на должности "@item.position" (период с @item.yearFrom по @item.yearTo; род деятельности @item.title)
                    </span>
                }
            }
        </span>
</div>
    
</div>
<div class="b-links mt-2 ml3">

    <br />

    <div class="link-edit"><a asp-controller="researchers" asp-action="edit" class="arial italic">Редактировать</a></div>
</div>

<div class="mt13">
    <a asp-controller="accountintegration" asp-action="UpdateResearcherAccountFromOutside" class="link-upload-s middle-icon fs13">Загрузить данные из системы «@AuthorizeResourceTypes.ScienceMap.GetDescription()»</a>
    <span style="color: red;">в разработке</span>
</div>

<div class="b-bottom-nav">
    <a href="/" class="small-icon icon-prev">Главная</a>
</div>