}

@Component.Invoke("Breadcrumbs", Model.NavigationTitle)

<h3>@Model.Title</h3>

@Component.Invoke("ResearcherTabs")

<h4>Информация</h4>
<div class="l-information">
    <div class="row">
        <div class="profile">
            <div class="photo inline-block">
