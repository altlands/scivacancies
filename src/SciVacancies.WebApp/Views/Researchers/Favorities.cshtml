@using System.Threading.Tasks
@using SciVacancies.WebApp
@using SciVacancies.WebApp.Controllers
@model SciVacancies.WebApp.ViewModels.VacanciesFavoritiesInResearcherIndexViewModel

<div class="crumbs">
    <a href="/">Главная страница</a><span class="separator">/</span>
    <a asp-controller="researchers" asp-action="account">Личная карточка</a><span class="separator">/</span>
    @ViewBag.Title
</div>

<h3>@Model.Title</h3>

@Component.Invoke("AccountTabs", typeof(ResearchersController))

<h4>@ViewBag.Title</h4>

<div class="table-control">
    <a href="#" class="close-table"><span class="italic">Очистить фильтры</span></a>
    <a href="#" class="reload-table"><span class="italic">Обновить список</span></a>
</div>

<table class="table request-table">
    <thead>
        <tr>
            <th><div class="inline-block"><img src="/images/icons/tab-head.png" class="va-middle" /></div><div class="inline-block ml6 va-middle">ID конкурса</div></th>
            <th><div class="inline-block"><img src="/images/icons/arrow-bottom-tab.png" class="va-middle" /></div><div class="inline-block ml6 va-middle">Должность</div></th>
            <th><div class="inline-block"><img src="/images/icons/tab-head.png" class="va-middle" /></div><div class="inline-block ml6 va-middle">Заработная<br /> плата</div></th>
            <th><div class="inline-block"><img src="/images/icons/tab-head.png" class="va-middle" /></div><div class="inline-block ml6 va-middle">Дата<br /> закрытия</div></th>
            <th><div class="inline-block"><img src="/images/icons/tab-head.png" class="va-middle" /></div><div class="inline-block ml6 va-middle">Статус<br />конкурса</div></th>
            <th><div class="inline-block"><img src="/images/icons/tab-head.png" class="va-middle" /></div><div class="inline-block ml6 va-middle">Статус<br />заявки</div></th>
            <th><div class="pl21 va-middle">Действия</div></th>
        </tr>
    </thead>
    <tbody>
        <!-- TODO: show data in depend on Vacancy.Status -->
        @foreach (var item in Model.Vacancies)
        {
            <text>
            <tr>
                <td>@item.Guid.ToString().Substring(0, 4)...</td>
                <td>@item.Name</td>
                <td>@item.SalaryFrom - @item.SalaryTo руб.</td>
                <td>@item.DateStartAcceptance.ToShortDateString() <!--01-09-14, 16:04--></td>


                <td>
                    <span class="status executed">
                        @item.Status.GetDescription() <!--Завершён-->
                    </span>
                    @*<span class="status work">
                        Приём заявок
                    </span>*@
                </td>

                <td>
                    <!--<span class="status executed">Победитель<br /><del>Победитель</del> </span>-->
                    <a asp-controller="applications" asp-action="create" asp-route-vacancyguid="@item.Guid" class="send-request-icon">
                        <span class="italic">Подать заявку</span>
                    </a>
                </td>

                <td>
                    <a asp-controller="vacancies" asp-action="preview" asp-route-id="@item.Guid" class="view-td-icon"></a>
                </td>
            </tr>
            </text>
        }
        <tr>
            <td>ИИС60290004</td>
