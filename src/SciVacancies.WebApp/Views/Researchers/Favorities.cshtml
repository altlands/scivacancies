            <td><span class="status work">В работе</span></td>
            <td>
                <a asp-controller="vacancies" asp-action="preview" asp-route-id="@Guid.NewGuid()" class="view-td-icon"></a>
            </td>
        </tr>
        <tr>
            <td>РНП58000322</td>
            <td>Руководитель<br /> научного подразделения</td>
            <td>60000 руб.</td>
            <td>01-09-14, 16:04</td>
            <td><span class="status work">Объявлен</span></td>
            <td><span class="status work">В работе</span></td>
            <td>
                <a asp-controller="vacancies" asp-action="preview" asp-route-id="@Guid.NewGuid()" class="view-td-icon"></a>
            </td>
        </tr>
